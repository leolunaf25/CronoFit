<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/pbBox2"
        app:layout_constraintEnd_toEndOf="@+id/pbBox2"
        app:layout_constraintStart_toStartOf="@id/pbBox2"
        app:layout_constraintTop_toTopOf="@id/pbBox2">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvChronometer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="62sp"
                tools:text="12:00" />

            <ProgressBar
                android:id="@+id/pbBarraHorizontal"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:indeterminate="false"
                android:max="100"
                android:minWidth="250dp"
                android:minHeight="20dp"
                android:progress="0" />
        </LinearLayout>

    </FrameLayout>

    <RelativeLayout
        android:id="@+id/pbBox2"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginHorizontal="22dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.lunatcoms.cronofit.CreateRing
            android:id="@+id/pbBarraDefinitive"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:indeterminate="false"
            android:visibility="visible"
            />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>